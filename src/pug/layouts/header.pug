include ../components/breadcrumbs
mixin header(obj)
	header.header
		.header__inner
			if obj.back
				.header__bar
					a.header__back(href='#')
						+icon('chevron-left')
						|Back
			if obj.breadcrumbs
				.header__bar
					+breadcrumbs(obj.breadcrumbs)
			.header__head
				.header__headline=obj.headline
					if obj.icon
						.header__icon
							img(src=obj.icon alt='')
				if obj.status
					.header__status(class='header__status_'+obj.status.status)=obj.status.text
				if obj.date
					.header__date 24.09.2021, 11:48:15
				if obj.controls
					.header__controls
						+button({text: 'Edit order', mods: 'bg_gray'})
						+button({text: 'Confirm order'})
				if obj.cancel
					.header__controls
						+button({text: 'Cancel', mods: 'bg_gray,color_danger'})
						+button({text: 'Save'})
			if obj.text
				.header__text=obj.text
			if obj.search
				form.header__search
					+control({
						attr: {
							placeholder: 'Search',
							name: 'search'
						},
						icon: 'search',
						mods: ['bg_fill']
					})
