extends ../templates/base
include ../components/dropdown
include ../components/item
include ../components/pagination
block variables
	-
		var title = 'Order AKN183333';
		var active = 'Orders';
block content
	+header({
		back: true,
		headline: 'Order AKN183333',
		controls: false,
		cancel: true,
		date: true,
		status: {text: 'Success', status: 'success'}
	})
	.content.content_bg

		.row.row_gutter_24
			.col-7
				.section.section_alt
					.section__header
						.section__headline Product Info
					.section__content
						+item({
							img: '../assets/uploads/item-pic2.jpg',
							name: 'PUMA Smash v2 Sneakers',
							edit: [{label: 'Color:', control: 'select'}, {label: 'Size:', control: 'select'}, {label: 'Quantity:', control: 'input'}],
							price: '$ 3 398.00'
						})
					.section__footer
						+button({text: 'Add product', mods: 'bg_gray'})
				.section.section_alt
					.section__header
						.section__headline Payment
					.section__content
						.table-inner
							table
								tbody
									tr
										td
											| Subtotal
										td
										td.table-inner_align_right
											+control({
												attr: {
													placeholder: '$ 0.00',
													name: 'subtotal'
												},
												mods:['right']
											})
									tr
										td
											| Discount
										td
										td.table-inner_align_right
											+control({
												attr: {
													placeholder: '$ 0.00',
													name: 'subtotal'
												},
												mods:['right']
											})
									tr
										td
											| Shipping
										td
										td.table-inner_align_right
											+control({
												attr: {
													placeholder: '$ 0.00',
													name: 'subtotal'
												},
												mods:['right']
											})
									tr
										td
											| Tax
										td
											| PDV 20%
										td.table-inner_align_right
											| $ 679.60
									tr.table-inner__total
										td(colspan='2')
											| #[b Total]
										td.table-inner_align_right
											| $ 3 398.00
			.col-5
				.section.section_alt
					.section__header
						.section__headline Customer Info
					.section__content
						.table-inner
							table
								tr
									td
										| User ID:
									td
										| #[span 105088845334]
								tr
									td
										| Messenger:
									td
										| #[span Telegram]
						.section__controls
							+button({text: 'Write Customer', mods: 'bg_gray,width_full'})
					.section__header
						.section__headline Shipping
					.section__content
						.table-inner
							table
								tr
									td
										| Full name
									td
										| #[span User Name]
								tr
									td
										| Address
									td
										| #[span Street Name, 01]
								tr
									td
										| Apartment, suite, ect.
									td
										| #[span 012]
								tr
									td
										| City
									td
										| #[span City name]
								tr
									td
										| Postal Code
									td
										| #[span 0123456789]
								tr
									td
										| Country/region
									td
										| #[span Country name]
								tr
									td
										| Phone number
									td
										| #[span +0 000 123-45-67]
